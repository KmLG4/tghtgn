<Window x:Class="Occupational_specialism.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Occupational_specialism"
        mc:Ignorable="d"
        Title="RegisterPage" Height="600" Width="500"
        ResizeMode="NoResize">
    <Grid >
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                <GradientStop Color="White" Offset="0.0"/>
                <GradientStop Color="DodgerBlue" Offset=".5"/>
                <GradientStop Color="Gray" Offset=".5"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Height="30" Margin="0,261,0,0"/>
        <TextBox HorizontalAlignment="Center" Margin="0,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Height="30"/>
        <Label Content="Password:" FontSize="14" HorizontalAlignment="Left" Margin="170,236,0,0" VerticalAlignment="Top" Height="25" Width="75" />
        <Label Content="Username:" FontSize="14" HorizontalAlignment="Left" Margin="170,145,0,0" VerticalAlignment="Top" Height="25" Width="75" />
        <Button Content="Register" HorizontalAlignment="Center" Margin="0,415,0,0" VerticalAlignment="Top" Width="100" Height="35" Click="Button_Click" />
        <Button Content="Already have an Account?" HorizontalAlignment="Center" Margin="0,445,0,90" Width="147" Height="30" Click="Button_Click_login" Background="Transparent" BorderThickness="0" FontSize="12" />
        <Label Content="Register An Account" FontSize="35" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,10,0,484"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Height="30" Margin="0,334,0,0"/>
        <Label Content="Repeat Password:" FontSize="14" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="28" Width="119" Margin="170,306,0,0" />
    </Grid>
</Window>
